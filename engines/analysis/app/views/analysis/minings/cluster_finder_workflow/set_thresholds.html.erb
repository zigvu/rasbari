<!-- BEGIN: Layout -->
<%= render :layout => 'outershell' do %>
  <div class="row">
    <div class="small-12 columns">
      <div class="workflow-panel">
        <div class="workflow-title clearfix">
          <div class="text left">Set minimum prob score threshold</div>
        </div>
        <div class="workflow-content">

<!-- BEGIN: Content -->
<%= simple_form_for @mining, :url => wizard_path, :method => :put do |f| %>

<!-- BEGIN: Table -->
<table>
  <thead>
    <tr>
      <th>Score</th>
      <th># Locs</th>
      <th>Select</th>
    </tr>
  </thead>

  <tbody>
    <% @workflowObj.thresholds.each do |th| %>
      <tr>
        <th><%= th[:thresh] %></th>
        <th><%= th[:locs] %></th>
        <% isButChecked = (@workflowObj.selectedThreshold == th[:thresh]) %>
        <td><%= radio_button_tag 'threshold', th[:thresh], checked = isButChecked %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<!-- END: Table -->

<%= render 'common_buttons', :form_obj => f %>

<% end %>
<!-- END: Content -->

        </div>
      </div>
    </div>
  </div>
<% end %>
<!-- END: Layout -->
