<%= simple_form_for(@mining) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :ztype, collection: @miningTypes, label: "Type" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
