<h3>Listing Minings</h3>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>User</th>
      <th>Type</th>
      <th>State</th>
      <th>Updated</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @minings.each do |mining| %>
      <tr>
        <td><%= mining.name %></td>
        <td><%= mining.user.email %></td>
        <td><%= mining.type %></td>
        <td><%= mining.state %></td>
        <td><%= mining.updated_at %></td>
        <td><%= link_to 'Show', mining %></td>
        <td><%= link_to 'Edit', edit_mining_path(mining) %></td>
        <td><%= link_to 'Destroy', mining, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Mining', new_mining_path, class: 'button' %>
