<h3>Listing Streams</h3>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Base Url</th>
      <th>Machine</th>
      <th>State</th>
      <th>Priority</th>
      <th>Last Clip</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @streams.each do |stream| %>
      <tr>
        <td><%= stream.name %></td>
        <td><%= stream.base_url %></td>
        <td>TODO</td>
        <td><%= stream.state %></td>
        <td><%= stream.priority %></td>
        <td>TODO</td>
        <td><%= link_to 'Show', stream %></td>
        <td><%= link_to 'Edit', edit_stream_path(stream) %></td>
        <td><%= link_to 'Destroy', stream, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Stream', new_stream_path, class: 'button' %>
