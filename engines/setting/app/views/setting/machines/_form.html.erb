<%= simple_form_for(@machine) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :ztype, collection: @machineTypes, label: "Type" %>
    <%= f.input :zstate, collection: @machineStates, label: "State" %>
    <%= f.input :zcloud, collection: @cloudTypes, label: "Cloud" %>
    <%= f.input :hostname %>
    <%= f.input :ip %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
