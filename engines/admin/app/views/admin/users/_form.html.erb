<%= simple_form_for(@user) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :email %>
    <%= f.input :zrole, label: "Role", collection: @rolesHash %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
