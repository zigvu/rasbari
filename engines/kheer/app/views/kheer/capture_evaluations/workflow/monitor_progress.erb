<!-- BEGIN: Layout -->
<%= render :layout => 'outershell' do %>
  <div class="row">
    <div class="small-12 columns">
      <div class="workflow-panel">
        <div class="workflow-title clearfix">
          <div class="text left">Monitor Progress</div>
        </div>
        <div class="workflow-content">

<!-- BEGIN: Content -->
<%= simple_form_for @capture_evaluation, :url => wizard_path, :method => :put do |f| %>

<p>Refresh this page to see updated evaluation status/progress.</p>

<p><b>Evaluation State:</b> <%= @workflowObj.evaluationState %></p>
<p><b>Evaluation Progress:</b></p>
<table>
  <% dc = @capture_evaluation.decorate %>
  <tr>
    <td>Total clips</td>
    <td><%= "#{dc.totalClipsNum}" %></td>
  </tr>
  <tr>
    <td>Queued clips</td>
    <td><%= "#{dc.queuedClipsNum} (#{dc.queuedClipsPer}%)" %></td>
  </tr>
  <tr>
    <td>Downloaded clips</td>
    <td><%= "#{dc.downloadedClipsNum} (#{dc.downloadedClipsPer}%)" %></td>
  </tr>
  <tr>
    <td>Evaluated clips</td>
    <td><%= "#{dc.evaluatedClipsNum} (#{dc.evaluatedClipsPer}%)" %></td>
  </tr>
  <tr>
    <td>Failed clips</td>
    <td><%= "#{dc.failedClipsNum} (#{dc.failedClipsPer}%)" %></td>
  </tr>
</table>

<%= render 'common_buttons', :form_obj => f %>
<% end %>
<!-- END: Content -->

        </div>
      </div>
    </div>
  </div>
<% end %>
<!-- END: Layout -->
