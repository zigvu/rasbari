<!-- BEGIN: Layout -->
<%= render :layout => 'outershell' do %>
  <div class="row">
    <div class="small-12 columns">
      <div class="workflow-panel">
        <div class="workflow-title clearfix">
          <div class="text left">Set Details</div>
        </div>
        <div class="workflow-content">

<!-- BEGIN: Content -->
<%= simple_form_for @capture_evaluation, :url => wizard_path, :method => :put do |f| %>

<%= f.input :capture_id, collection: @workflowObj.captures, label: "Select capture" %>

<%= render '/kheer/common/chia_model_selection', radioTagPrefix: 'capEvaluation', chiaModelsHierarchy: @workflowObj.chiaModelsHierarchy, selectedMajorId: @workflowObj.selectedMajorId, selectedMinorId: @workflowObj.selectedMinorId, selectedMiniId: @workflowObj.selectedMiniId %>


<%= render 'common_buttons', :form_obj => f %>
<% end %>
<!-- END: Content -->

        </div>
      </div>
    </div>
  </div>
<% end %>
<!-- END: Layout -->
