<!-- BEGIN: Layout -->
<%= render :layout => 'outershell' do %>
  <div class="row">
    <div class="small-12 columns">
      <div class="workflow-panel">
        <div class="workflow-title clearfix">
          <div class="text left">Monitor Progress</div>
        </div>
        <div class="workflow-content">

<!-- BEGIN: Content -->
<%= simple_form_for @iteration, :url => wizard_path, :method => :put do |f| %>

<p>Refresh this page to see updated build status/progress.</p>

<p><b>Build State:</b> <%= @workflowObj.buildState %></p>
<p><b>Build Progress:</b> <%= @workflowObj.buildProgress %></p>

<%= render 'common_buttons', :form_obj => f %>
<% end %>
<!-- END: Content -->

        </div>
      </div>
    </div>
  </div>
<% end %>
<!-- END: Layout -->
