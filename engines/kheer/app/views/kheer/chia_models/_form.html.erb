<%= simple_form_for(@chia_model) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :comment %>
    <%= f.input :major_id, as: :hidden %>
    <%= f.input :minor_id, as: :hidden %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
